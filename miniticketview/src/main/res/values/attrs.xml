<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MiniTicketView">

        <attr name="miniTicketBackgroundColor" format="color"/>
        <attr name="miniTicketBackgroundDrawable" format="reference"/>

        <attr name="miniTicketPerforationBackgroundColor" format="color"/>
        <attr name="miniTicketPerforationBackgroundDrawable" format="reference"/>
        <attr name="miniTicketPerforationPositionPercent" format="float"/>

        <attr name="miniTicketScallopRadius" format="dimension"/>
        <attr name="miniTicketScallopHide" format="boolean"/>

        <attr name="miniTicketShowDivider" format="boolean"/>
        <attr name="miniTicketDividerWidth" format="dimension"/>
        <attr name="miniTicketDividerPadding" format="dimension"/>
        <attr name="miniTicketDividerColor" format="color"/>
        <attr name="miniTicketDividerType" format="enum">
            <enum name="normal" value="0"/>
            <enum name="dash" value="1"/>
        </attr>
        <attr name="miniTicketDividerDashGap" format="dimension"/>
        <attr name="miniTicketDividerDashLength" format="dimension"/>

        <attr name="miniTicketCornerRadius" format="dimension"/>

    </declare-styleable>

</resources>